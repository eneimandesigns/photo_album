<h1>Index of Images</h1>
<%= link_to 'Albums', albums_path %>
<p>
<table class="entries">
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Path</th>
    <th>Content</th>
    <th>Album</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.title.to_s.sub(/^---\s\S\s/,'') %></td>
    <td><%= photo.image %></td>
    <td><%= photo.path %></td>
    <td><%= photo.content %></td>
    <td><%= photo.album_id %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

